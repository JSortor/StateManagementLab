@{
    ViewBag.Title = "Shopping Cart";
}
<h2>Shopping Cart</h2>
<table>
    <tr>
        <th>Item</th>
        <th> Description</th>
        <th> Price</th>
    </tr>
    @foreach (var item in ViewBag.ShoppingCart)
    {
        <tr>
            <td>@item.ItemName</td>
            <td>@item.Description</td>
            <td>@item.Price</td>
            <td><a href="/Home/DeleteItem?itemName=@item.ItemName"> Delete item from Cart</a></td>
        </tr>
    }
</table>
